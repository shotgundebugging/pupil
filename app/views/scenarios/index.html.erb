<div class="flex items-center justify-between mb-6">
  <div>
    <h1 class="text-2xl font-semibold">Scenarios</h1>
    <p class="opacity-70 text-sm">Inspect synchronized RGB + depth, draw annotations.</p>
  </div>
  <%= link_to "New Scenario", new_scenario_path, class: "inline-flex items-center px-4 py-2 rounded-md bg-mission-primary/20 text-cyan-300 border border-cyan-400/40 hover:bg-mission-primary/30 transition" %>
  
</div>

<% if @scenarios.empty? %>
  <div class="rounded-xl bg-mission-surface border border-mission-border p-5">
    <h2 class="text-lg font-semibold">No scenarios yet</h2>
    <p class="opacity-70 mt-1">Create your first scenario to begin annotating.</p>
    <div class="mt-3">
      <%= link_to "Create Scenario", new_scenario_path, class: "inline-flex items-center px-4 py-2 rounded-md bg-emerald-500/20 text-emerald-300 border border-emerald-400/40 hover:bg-emerald-500/30 transition" %>
    </div>
  </div>
<% else %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @scenarios.each do |scenario| %>
      <div class="rounded-xl bg-mission-surface border border-mission-border p-4 hover:border-cyan-400/40 transition">
        <div class="flex items-start justify-between gap-4">
          <div class="min-w-0">
            <h2 class="text-lg font-semibold">
              <%= link_to (scenario.name.presence || "(unnamed scenario)"), scenario_path(scenario), class: "hover:text-cyan-300 transition" %>
            </h2>
            <% if scenario.description.present? %>
              <p class="text-sm opacity-70 line-clamp-2"><%= scenario.description %></p>
            <% end %>
          </div>
          <div class="shrink-0 text-right">
            <div class="text-xs uppercase tracking-wide text-gray-400">Annotations</div>
            <div class="text-cyan-300 font-mono"><%= scenario.annotations.size %></div>
          </div>
        </div>
        <div class="flex items-center justify-between mt-3 text-xs gap-2">
          <span class="px-2 py-0.5 rounded border border-mission-border bg-mission-panel/60">RGB <%= scenario.rgb_video.attached? ? "attached" : "missing" %></span>
          <span class="px-2 py-0.5 rounded border border-mission-border bg-mission-panel/60">Depth <%= scenario.depth_video.attached? ? "attached" : "missing" %></span>
          <%= link_to "Open", scenario_path(scenario), class: "ml-auto inline-flex items-center px-3 py-1.5 rounded-md bg-mission-panel border border-mission-border hover:border-cyan-400/40 hover:bg-mission-surface transition" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
